{
	"name": "df_demo",
	"properties": {
		"description": "test",
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"name": "source"
				}
			],
			"sinks": [
				{
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "filter",
					"description": "filter the sentiment to positive only "
				},
				{
					"name": "select"
				}
			],
			"scriptLines": [
				"source(output(",
				"          review as string,",
				"          sentiment as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false) ~> source",
				"source filter(sentiment=='positive') ~> filter",
				"filter select(mapColumn(",
				"          review,",
				"          sentiment",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select",
				"select sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}